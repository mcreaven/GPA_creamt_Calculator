<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity2">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
         />
    </LinearLayout>
    <EditText
        android:id="@+id/input_field1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Subject 1"
        app:layout_constraintBottom_toBottomOf="@id/input_field2"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <EditText
        android:id="@+id/input_field2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Subject 2"
        app:layout_constraintBottom_toBottomOf="@id/input_field3"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/input_field1" />
    <EditText
        android:id="@+id/input_field3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Subject 3"
        app:layout_constraintBottom_toBottomOf="@id/input_field4"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/input_field2" />
    <EditText
        android:id="@+id/input_field4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Subject 4"
        app:layout_constraintBottom_toBottomOf="@id/input_field5"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/input_field3" />
    <EditText
        android:id="@+id/input_field5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Subject 5"
        app:layout_constraintBottom_toBottomOf="@id/tv1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/input_field4" />
    <TextView
        android:id="@+id/tv1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="GPA Value"
        android:textSize="30dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/btn_calculate"
        android:onClick="submit_method"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/tv1"/>



</android.support.constraint.ConstraintLayout>